<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/module_fragment_left_labTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/module_fragment_leftTitle"/>

        <EditText
            android:id="@+id/module_fragment_left_etInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/module_fragment_left_labTitle"/>

        <Button
            android:id="@+id/module_fragment_left_btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_below="@+id/module_fragment_left_etInput"/>

        <TextView
            android:id="@+id/module_fragment_left_tvMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rec...."
            android:layout_below="@id/module_fragment_left_btnSend"/>

    </RelativeLayout>
</layout>